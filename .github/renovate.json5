{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>truecharts/public//.github/renovate/main.json5",
    "github>jtmusson/hydra-cluster//.github/renovate/minecraft-bedrock.json5",
    "github>jtmusson/hydra-cluster//.github/renovate/major.json5"
  ],
  "timezone": "Europe/London",
  "schedule": ["* 0-5 * * *"],
  "packageRules": [
    {
      "description": ["Allow github-actions to create branches at any time"],
      "matchManagers": "github-actions",
      "schedule": ["* * * * *"]
    },
    {
      "description": ["Set schedule for reloader to override TrueCharts config"],
      "matchPackagePatterns": ["reloader"],
      "schedule": ["on the first day of the week"]
    },
    {
      "description": ["Disable matching for helm-values to prevent duplication"],
      "matchPackageNames": ["ghcr.io/lovelaze/nebula-sync"],
      "matchManagers": ["helm-values"],
      "enabled": false
    }
  ]
}