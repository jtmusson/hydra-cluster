{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "description": ["Allow github-actions to create branches at any time"],
            "matchManagers": ["github-actions"],
            "schedule": ["* * * * *"]
        },
        {
            "description": ["Allow Kubelet and Talos upgrades to create branches at any time"],
            "matchPackageNames": ["ghcr.io/siderolabs/kubelet", "ghcr.io/siderolabs/installer"],
            "schedule": ["* * * * *"]
        },
        {
            "description": ["Set schedule for reloader to override TrueCharts config"],
            "matchPackageNames": ["ghcr.io/stakater/charts/reloader"],
            "schedule": ["* 0-5 * * *"]
        }
    ]
}